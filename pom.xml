            </properties>
        </profile>
        <profile>
            <id>server</id>
            <properties>
                <properties.file.application>file:#{systemProperties[JETTY_HOME]}/config/application.properties</properties.file.application>
                <properties.file.datasource>file:#{systemProperties[JETTY_HOME]}/config/datasource.properties</properties.file.datasource>
