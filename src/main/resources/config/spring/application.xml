<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop" xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <context:component-scan base-package="com.qr.qradmin"/>
    <aop:config proxy-target-class="true"/>

    <mvc:annotation-driven conversion-service="conversionService"/>

    <bean id="conversionService" class="org.springframework.format.support.FormattingConversionServiceFactoryBean">
        <property name="converters">
            <set>
                <bean class="com.qr.qradmin.converter.UserInfoToDtoConverter"/>
                <bean class="com.qr.qradmin.converter.UserToDtoConverter"/>
                <bean class="com.qr.qradmin.converter.UserToEntityConverter"/>
                <bean class="com.qr.qradmin.converter.MerchantOrderToDtoConverter"/>
                <bean class="com.qr.qradmin.converter.StringToSortConverter"/>
                <bean class="com.qr.qradmin.converter.StringToFilterConverter"/>
            </set>
        </property>
    </bean>

</beans>